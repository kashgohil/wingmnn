{
  "compilerOptions": {
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./",
    "paths": {
      "@mails": ["src/modules/mails/index.ts"],
      "@mails/*": ["src/modules/mails/*"],

      "@projects": ["src/modules/projects/index.ts"],
      "@projects/*": ["src/modules/projects/*"],

      "@notes": ["src/modules/notes/index.ts"],
      "@notes/*": ["src/modules/notes/*"],

      "@messages": ["src/modules/messages/index.ts"],
      "@messages/*": ["src/modules/messages/*"],

      "@auth": ["src/modules/auth/index.ts"],
      "@auth/*": ["src/modules/auth/*"],

      "@setup": ["src/setup/index.ts"],
      "@setup/*": ["src/setup/*"],

      "@users": ["src/users/index.ts"],
      "@users/*": ["src/users/*"],

      "@games": ["src/modules/games/index.ts"],
      "@games/*": ["src/modules/games/*"],

      "@types": ["src/types.ts"]
    }
  }
}
